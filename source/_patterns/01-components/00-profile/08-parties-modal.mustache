<div class="modal" id="parties-modal">
    <div class="modal-overlay"></div>
    <div class="modal-container">
        <div class="modal-header">
            <h2 class="modal-title">33 Parties</h2>
            <button class="btn bg-black btn-close" onclick="closeModal()">
                <img src="/images/icons/misc/close-x.svg" alt="Close Icon">
            </button>
        </div>
        <div class="modal-content">
            <div class="content-scrollable">
                {{#parties}}
                    <div class="partie-item">
                        <span class="partie-title">{{ partieTitle }}</span>
                        <p class="partie-description">{{ partieDescription }}</p>
                        <div class="partie-meta">
                            <div class="partie-badges">
                                {{#xbox}}
                                    <img src="/images/icons/16px/xbox-blue-muted.svg" alt="Xbox Icon">
                                {{/xbox}}
                                {{#steam}}
                                    <img src="/images/icons/16px/steam-blue-muted.svg" alt="Steam Icon">
                                {{/steam}}
                                {{#partieTags}}
                                    <div class="tag bg-blue">{{ tagLabel }}</div>
                                {{/partieTags}}
                            </div>
                            <span class="partie-game">{{ partieGame }}</span>
                        </div>
                    </div>
                {{/parties}}
            </div>
        </div>
    </div>
</div>
