<div class="modal" id="follow-requests-modal">
    <div class="modal-overlay"></div>
    <div class="modal-container">
        <div class="modal-header">
            <h2 class="modal-title">Follow Requests</h2>
            <button class="btn bg-black btn-close" onclick="closeModal()">
                <img src="/images/icons/misc/close-x.svg" alt="Close Icon">
            </button>
        </div>
        <div class="modal-content">
            <div class="content-scrollable">
                {{#requests}}
                    {{> components-request-person }}
                {{/requests}}
            </div>
        </div>
    </div>
</div>
