<div class="modal manage-accounts-modal {{#empty}}empty{{/empty}}" id="{{ modalId }}">
    <div class="modal-overlay"></div>
    <div class="modal-container">
        <div class="modal-header">
            <h2 class="modal-title">{{ modalTitle }}</h2>
            <button class="btn bg-black btn-close" onclick="closeModal()">
                <img src="/images/icons/misc/close-x.svg" alt="Close Icon">
            </button>
        </div>
        <div class="modal-content">
            {{^empty}}
                <div class="content-scrollable">
                    {{#people}}
                        {{> components-participant }}
                    {{/people}}
                </div>
            {{/empty}}

            {{#empty}}
                <img src="/images/logo-lockup.svg" alt="Partie Logo" class="logo">
                <p>{{ emptyMessage }}</p>
            {{/empty}}
        </div>
    </div>
</div>
