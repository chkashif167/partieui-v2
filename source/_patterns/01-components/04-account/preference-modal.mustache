<div class="modal preference-modal dynamic-height" id="{{ modalId }}">
    <div class="modal-overlay"></div>
    <div class="modal-container">
        <div class="modal-header">
            <h2 class="modal-title">{{ modalTitle }}</h2>
            <button class="btn bg-black btn-close" onclick="closeModal('#{{ modalId }}')">
                <img src="/images/icons/misc/close-x.svg" alt="Close Icon">
            </button>
        </div>
        <div class="modal-content">
            {{#modalOptions}}
                {{> components-checkbox-group }}
            {{/modalOptions}}
            <button class="btn bg-blue btn-fit" onclick="closeModal('#{{ modalId }}'){{#openModalId}}; openModal('#{{ openModalId }}'){{/openModalId}}">{{ modalCta }}{{^modalCta}}Save{{/modalCta}}</button>
        </div>
    </div>
</div>
