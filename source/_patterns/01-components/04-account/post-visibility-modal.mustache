<div class="modal visibility-modal dynamic-height" id="post-visibility-modal">
    <div class="modal-overlay"></div>
    <div class="modal-container">
        <div class="modal-header">
            <h2 class="modal-title">Post Visibility</h2>
            <button class="btn bg-black btn-close" onclick="closeModal()">
                <img src="/images/icons/misc/close-x.svg" alt="Close Icon">
            </button>
        </div>
        <div class="modal-content">
            <div class="content-scrollable">
                {{#modalOptions}}
                    {{> components-checkbox-group }}
                {{/modalOptions}}
            </div>
        </div>
    </div>
</div>
