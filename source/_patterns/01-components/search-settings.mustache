<div class="modal search-settings-modal dynamic-height" id="search-settings-modal">
    <div class="modal-overlay"></div>
    <div class="modal-container">
        <div class="modal-header">
            <h2 class="modal-title">Search Settings</h2>
            <button class="btn bg-black btn-close" onclick="closeModal()">
                <img src="/images/icons/misc/close-x.svg" alt="Close Icon">
            </button>
        </div>
        <div class="modal-content">
            {{#exactToggles}}
                {{> components-setting-toggle }}
            {{/exactToggles}}

            {{#platformToggles}}
                {{> components-setting-toggle }}
            {{/platformToggles}}
            <button class="btn bg-blue mv-24" onclick="closeModal()">Save</button>
        </div>
    </div>
</div>
