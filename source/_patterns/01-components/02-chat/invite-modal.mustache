<div class="modal show-search" id="invite-modal">
    <div class="modal-overlay"></div>
    <div class="modal-container">
        <div class="modal-header">
            <h2 class="modal-title">Invite Friends</h2>
            <button class="btn bg-black btn-close" onclick="closeModal()">
                <img src="/images/icons/misc/close-x.svg" alt="Close Icon">
            </button>
        </div>
        {{> components-search }}
        <div class="modal-content">
            <div class="content-scrollable">
                {{#invites}}
                    {{> components-participant }}
                {{/invites}}
            </div>
        </div>
    </div>
</div>
