<div class="modal removal-modal dynamic-height" id="removal-modal">
    <div class="modal-overlay"></div>
    <div class="modal-container">
        <div class="modal-header">
            <h2 class="modal-title">Reason for removal</h2>
            <button class="btn bg-black btn-close" onclick="closeModal()">
                <img src="/images/icons/misc/close-x.svg" alt="Close Icon">
            </button>
        </div>
        <div class="modal-content">
            <div class="content-scrollable">
                {{#modalOptions}}
                    {{> components-checkbox-group }}
                {{/modalOptions}}

                <button class="btn bg-teal btn-fit btn-remove">Remove</button>
            </div>
        </div>
    </div>
</div>
