<div class="modal game-options-modal dynamic-height" id="game-type-modal">
    <div class="modal-overlay"></div>
    <div class="modal-container">
        <div class="modal-header">
            <h2 class="modal-title">{{ modalTitle }}</h2>
            <button class="btn bg-black btn-close" onclick="closeModal('#game-type-modal')">
                <img src="/images/icons/misc/close-x.svg" alt="Close Icon">
            </button>
        </div>
        <div class="modal-content">
            {{#modalOptions}}
                {{> components-checkbox-group }}
            {{/modalOptions}}

            <button class="btn bg-blue btn-fit" onclick="closeModal('#game-type-modal')">Save</button>
        </div>
    </div>
</div>
