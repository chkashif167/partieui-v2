<div class="modal join-modal dynamic-height" id="join-modal">
    <div class="modal-overlay"></div>
    <div class="modal-container">
        <div class="modal-header">
            <div class="header-content">
                <h2 class="modal-title">Join Partie</h2>
                <span class="h2">6 / 20</span>
            </div>
            <button class="btn bg-black btn-close" onclick="closeModal()">
                <img src="/images/icons/misc/close-x.svg" alt="Close Icon">
            </button>
        </div>
        <div class="modal-content">
            <div class="partie-item">
                <span class="partie-title">PartieNameTitle</span>
                <p class="partie-description">Put a bird on it intelligentsia hella, leggings roof party everyday carry listicle wayfarerse.</p>
                <div class="partie-meta">
                    <div class="partie-badges">
                        <img src="/images/icons/16px/xbox-blue-muted.svg" alt="Xbox Icon">
                        <div class="tag bg-blue">PVE</div>
                    </div>
                    <span class="partie-game">Apex Legends</span>
                </div>
            </div>
            <div class="person-listing partie-host">
                <a class="avatar" href="{{ link.pages-public-profile }}">
                    <img src="/images/avatar-mete.png" alt="Avatar Alt Text">
                    <div class="online-indicator"></div>
                </a>
                <div class="person-name">
                    <a href="{{ link.pages-public-profile }}">MeTeMeNeo</a>
                    <div class="tag bg-blue"><span>Host</span></div>
                </div>
                <div class="person-info">
                    <span class="followers">88 Followers</span>
                </div>
                <button class="btn btn-fit bg-black">Follow</button>
            </div>
            <div class="loading-indicator">
                <img src="/images/loader.png" srcset="/images/loader@2x.png 2x, /images/loader@3x.png 3x" alt="Loading Indicator" class="loader">
                <p class="t-caption">Waiting for host...</p>
            </div>
            <button class="btn bg-teal mv-24 hide-tablet hide-desktop" onclick="showLoadingIndicator()">Send Request</button>
            <div class="btn-group mv-24 hide-mobile">
                <button class="btn btn-outline" onclick="closeModal()">Cancel</button>
                <button class="btn bg-teal" onclick="showLoadingIndicator()">Send Request</button>
            </div>
        </div>
    </div>
</div>
